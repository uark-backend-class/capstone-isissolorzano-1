<body>
<div class="container" style="margin-top: 250px"  >
    <div class="row" >
        <div class="col" style="margin-left: 0px" >
            <h1 class="display-2 font-weight-normal" style="font-family:Arial, Helvetica, sans-serif;">RemindMe!</h1>
           
        </div>

     <div class= "col col-md-5" >
<form action="/login"   method="POST">
    
    <div class="form-group" style="margin-bottom: 20px">
        <input type="text" class="form-control form-control-lg" style="padding-top:28px; padding-bottom: 28px" name="email" value="{{ user.email }}" placeholder="Email" >
    </div>
    <div class="form-group" style="margin-bottom: 20px">
        <input type="text" class="form-control form-control-lg" style="padding-top:28px; padding-bottom: 28px" name="password" value="{{ user.password }}" placeholder="Password">
    </div>  
        <input type="hidden" name="id" value="{{user._id}}" />
     
        <button type="submit" class="btn btn-success btn-block" style="padding-top:15px; padding-bottom: 15px">Log In</button>
    
         
</form>
    <a href="/register"><button type="submit" class="btn btn-info btn-block" style="padding-top:15px; padding-bottom: 15px">Create New Account</button></a>
</div>
</div>
</div>
    
</body>