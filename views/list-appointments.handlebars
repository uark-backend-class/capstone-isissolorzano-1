<div class="container" style="margin-top: 100px">
<h1 class=" font-weight-normal text-center" style="font-family:serif;">{{ title }}</h1>
    <a href="/addAppointment"><button style= 'margin-bottom:10px'class="btn btn-dark rounded-circle">+</button></a>
    <table class="table">
        <thead class="thead-dark">
            <tr> 
                <th class="text-center">Name</th>
                <th class="text-center">Time</th>
                <th class="text-center">Message</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each appointments}}
                <tr>
                    
                    <td class="text-center">{{this.name}}</td>
                    <td class="text-center">{{this.time}}</td>
                    <td class="text-center">{{this.message}}</td>
                    <td class="text-right">
                        <a href='/pushContacts/{{this._id}}'><button type="button" class="btn btn-outline-success">Send To</button></a> 
                        <a href='/edit/{{this._id}}'><button type="button" class="btn btn-outline-dark" >Edit</button></a> 
                        <a href= '/delete/{{this._id}}'><button type="button" class="btn btn-outline-danger">Delete</button></a>
                    </td>
                </tr>
                {{/each}}
        </tbody>
    </table>
</div>