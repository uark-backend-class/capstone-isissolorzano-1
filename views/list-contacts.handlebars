<div class="container" style="margin-top: 100px">
<h1 class="font-weight-normal text-center" style="font-family:serif;">{{ title }}</h1>
    <a href = "/addContact"><button type="button" style="margin-bottom:10px"class="btn btn-dark rounded-circle">+</button></a>
    <table class="table table-hover">
        <tbody>
            {{#each contacts}}
                <tr>
                    <td class="text-left">{{this.firstName}} {{this.lastName}}</td>
                    <td class="text-left">{{this.phone}}</td>
                    <td class="text-right">
                        <a href='/editContact/{{this._id}}'><button type="button" class="btn btn-outline-dark">Edit</button></a> 
                        <a href='/deleteContact/{{this._id}}'><button type="button" class="btn btn-outline-danger">Delete</button></a>
                    </td>
                </tr>
                {{/each}}
        </tbody>
    </table>
</div>